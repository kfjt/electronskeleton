{
  "name": "electronskeleton",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./dist/electron/main.js",
  "author": "example.com",
  "homepage": "https://github.com/kfjt/electronskeleton",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "dev": "concurrently \"vite build --watch\" \"tsc -w -p tsconfig.node.json\" \"wait-on file:dist/electron/main.js file:dist/renderer/index.html && electron .\"",
    "build:main": "tsc -p tsconfig.node.json",
    "build:renderer": "vite build",
    "build": "npm run typecheck && npm run build:main && npm run build:renderer",
    "build:prod": "npm run clean && npm run build",
    "test": "vitest",
    "package": "npm run build:prod && electron-builder --dir",
    "package:win": "npm run build:prod && electron-builder --win",
    "package:mac": "npm run build:prod && electron-builder --mac",
    "package:linux": "npm run build:prod && electron-builder --linux",
    "clean": "rimraf dist",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^7.0.0",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vitest": "^0.34.0",
    "wait-on": "^6.0.0"
  }
}
